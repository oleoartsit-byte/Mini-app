# 数据库配置
DATABASE_URL="postgresql://questwall:questwall123@localhost:5432/questwall?schema=public"

# Redis 配置
REDIS_URL="redis://localhost:6379"

# JWT 配置
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"

# Telegram Bot 配置
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"

# TonConnect 配置
TONCONNECT_MANIFEST_URL="https://your-domain.com/tonconnect-manifest.json"

# TON 网络配置
TON_NETWORK="mainnet"  # mainnet 或 testnet
TON_API_KEY="your-tonapi-key"

# 应用配置
NODE_ENV="development"
PORT=3000

# CORS 配置
CORS_ORIGIN="https://your-tma-domain.com"

# 日志级别
LOG_LEVEL="debug"

# ClickHouse 配置（可选，用于数据分析）
CLICKHOUSE_URL="http://localhost:8123"
CLICKHOUSE_DB="questwall_analytics"

# Adsgram 配置（可选）
ADSGRAM_API_KEY="your-adsgram-api-key"
ADSGRAM_BLOCK_ID="your-adsgram-block-id"

# Google Gemini AI 配置（用于 Twitter 点赞截图验证）
GEMINI_API_KEY="your-gemini-api-key"
